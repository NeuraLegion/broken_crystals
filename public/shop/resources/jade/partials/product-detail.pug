block module
    .test
        .container
            .row
                +column({cols: [4, 4, 4, 4]})
    .ps-product--detail.pt-60
        .ps-container
            .row
                .col-lg-10.col-md-12.col-lg-offset-1
                    .ps-product__thumbnail
                        .ps-product__preview
                            .ps-product__variants
                                .item: img(src="images/shoe-detail/1.jpg" alt="")
                                .item: img(src="images/shoe-detail/2.jpg" alt="")
                                .item: img(src="images/shoe-detail/3.jpg" alt="")
                                .item: img(src="images/shoe-detail/3.jpg" alt="")
                                .item: img(src="images/shoe-detail/3.jpg" alt="")
                            a(class="popup-youtube" href="http://www.youtube.com/watch?v=0O2aH4XLbto").ps-product__video
                                img(src="images/shoe-detail/1.jpg" alt="")
                                i.fa.fa-play
                        .ps-product__image
                            .item: img(src="images/shoe-detail/1.jpg" alt="" data-zoom-image="images/shoe-detail/1.jpg" class="zoom")
                            .item: img(src="images/shoe-detail/2.jpg" alt="" data-zoom-image="images/shoe-detail/2.jpg" class="zoom")
                            .item: img(src="images/shoe-detail/3.jpg" alt="" data-zoom-image="images/shoe-detail/3.jpg" class="zoom")
                    .ps-product__thumbnail--mobile
                        .ps-product__main-img
                            img(src="images/shoe-detail/1.jpg" alt="")
                        .ps-product__preview.owl-slider(
                        data-owl-auto= 'true',
                        data-owl-loop= 'true',
                        data-owl-speed= '5000',
                        data-owl-gap= '20',
                        data-owl-nav= 'true',
                        data-owl-dots= 'false',
                        data-owl-item= '3',
                        data-owl-item-xs= '3',
                        data-owl-item-sm= '3',
                        data-owl-item-md= '3',
                        data-owl-item-lg= '3',
                        data-owl-duration= '1000',
                        data-owl-mousedrag= 'on'
                        )
                            img(src="images/shoe-detail/1.jpg" alt="")
                            img(src="images/shoe-detail/2.jpg" alt="")
                            img(src="images/shoe-detail/3.jpg" alt="")
                    .ps-product__info
                        .ps-product__rating
                            select.ps-rating
                                option(value='1') 1
                                option(value='1') 2
                                option(value='1') 3
                                option(value='1') 4
                                option(value='2') 5
                            a(href='#') (Read all 8 reviews)
                        h1 Air strong  training
                        p.ps-product__category
                            a(href='#')  Men shoes
                            | ,
                            a(href='#')  Nike
                            | ,
                            a(href='#')  Jordan
                        h3.ps-product__price £ 115 <del>£ 330</del>
                        .ps-product__block.ps-product__quickview
                            h4 QUICK REVIEW
                            p The Nike Free RN 2017 Men's Running Shoe weighs less than previous versions and features an updated knit material…
                        .ps-product__block.ps-product__style
                            h4 CHOOSE YOUR STYLE
                            ul
                                li: a(href='product-detail.html'): img(src="images/shoe/sidebar/1.jpg" alt="")
                                li: a(href='product-detail.html'): img(src="images/shoe/sidebar/2.jpg" alt="")
                                li: a(href='product-detail.html'): img(src="images/shoe/sidebar/3.jpg" alt="")
                                li: a(href='product-detail.html'): img(src="images/shoe/sidebar/2.jpg" alt="")
                        .ps-product__block.ps-product__size
                            h4 CHOOSE SIZE
                                a(href='#') Size chart
                            select.ps-select.selectpicker
                                option(value="1") Select Size
                                option(value="2") 4
                                option(value="3") 4.5
                                option(value="3") 5
                                option(value="3") 6
                                option(value="3") 6.5
                                option(value="3") 7
                                option(value="3") 7.5
                                option(value="3") 8
                                option(value="3") 8.5
                                option(value="3") 9
                                option(value="3") 9.5
                                option(value="3") 10
                            .form-group
                                input.form-control(type="number" value='1')
                        .ps-product__shopping
                            a(href='cart.html').ps-btn.mb-10 Add to cart
                                i.ps-icon-next
                            .ps-product__actions
                                a(href='whishlist.html').mr-10: i.ps-icon-heart
                                a(href='compare.html'): i.ps-icon-share
                    .clearfix
                    .ps-product__content.mt-50
                        ul(class="tab-list" role="tablist")
                            li.active
                                a(href="#tab_01" aria-controls="tab_01" role="tab" data-toggle="tab") Overview
                            li
                                a(href="#tab_02" aria-controls="tab_02" role="tab" data-toggle="tab") Review
                            li
                                a(href="#tab_03" aria-controls="tab_03" role="tab" data-toggle="tab") PRODUCT TAG
                            li
                                a(href="#tab_04" aria-controls="tab_04" role="tab" data-toggle="tab") ADDITIONAL
                    .tab-content.mb-60
                        .tab-pane.active(role='tabpanel')#tab_01
                            p Caramels tootsie roll carrot cake sugar plum. Sweet roll jelly bear claw liquorice. Gingerbread lollipop dragée cake. Pie topping jelly-o. Fruitcake dragée candy canes tootsie roll. Pastry jelly-o cupcake. Bonbon brownie soufflé muffin.
                            p Sweet roll soufflé oat cake apple pie croissant. Pie gummi bears jujubes cake lemon drops gummi bears croissant macaroon pie. Fruitcake tootsie roll chocolate cake Carrot cake cake bear claw jujubes topping cake apple pie. Jujubes gummi bears soufflé candy canes topping gummi bears cake soufflé cake. Cotton candy soufflé sugar plum pastry sweet roll..
                        .tab-pane(role='tabpanel')#tab_02
                            p.mb-20 1 review for <strong>Shoes Air Jordan</strong>
                            .ps-review
                                .ps-review__thumbnail: img(src="images/user/1.jpg" alt="")
                                .ps-review__content
                                    header
                                        select.ps-rating
                                            option(value='1') 1
                                            option(value='1') 2
                                            option(value='1') 3
                                            option(value='1') 4
                                            option(value='5') 5
                                        p By
                                            a(href='')  Alena Studio
                                            |  - November 25, 2017
                                    p Soufflé danish gummi bears tart. Pie wafer icing. Gummies jelly beans powder. Chocolate bar pudding macaroon candy canes chocolate apple pie chocolate cake. Sweet caramels sesame snaps halvah bear claw wafer. Sweet roll soufflé muffin topping muffin brownie. Tart bear claw cake tiramisu chocolate bar gummies dragée lemon drops brownie.
                            form(action="_action" method="post").ps-product__review
                                    h4 ADD YOUR REVIEW
                                    .row
                                        +column({cols: [6, 6, 6, 12]})
                                            .form-group
                                                label Name:
                                                    span *
                                                input.form-control(type="text" placeholder="")
                                            .form-group
                                                label Email:
                                                    span *
                                                input.form-control(type="email" placeholder="")
                                            .form-group
                                                label Your rating
                                                    span
                                                select.ps-rating
                                                    option(value='1') 1
                                                    option(value='1') 2
                                                    option(value='1') 3
                                                    option(value='1') 4
                                                    option(value='5') 5
                                        +column({cols: [8, 8, 6, 12]})
                                            .form-group
                                                label Your Review:
                                                textarea.form-control(rows="6")
                                            .form-group
                                                button.ps-btn.ps-btn--sm Submit
                                                    i.ps-icon-next
                        .tab-pane(role='tabpanel')#tab_03
                            p Add your tag <span> *</span>
                            form(action="_action" method="post").ps-product__tags
                                .form-group
                                    input.form-control(type="text" placeholder="")
                                    button.ps-btn.ps-btn--sm Add Tags
                        .tab-pane(role='tabpanel')#tab_04
                            .form-group
                                textarea.form-control(rows='6' placeholder="Enter your addition here...")
                            .form-group
                                button.ps-btn(type="button") Submit
